    <aside class="col-md-4">
      <section class="user_info">
        <p>ログインしました</p>
      </section>
    </aside>
  </div>
  
<% else %>

<div class = "Top">
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
